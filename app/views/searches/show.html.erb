        <i class="fa-solid fa-graduation-cap col-2"></i>
        <div class="card-product-infos col-10">
          <h2>Restaurants</h2>
          <% if @search.restaurants_score > 0 %>
            <p>There are lots of restaurants around this place. Sweet!</p>
          <% elsif @search.restaurants_score == 0 %>
            <p>There are some restaurants around.</p>
          <% else %>
            <p>There are no restaurants in the area.</p>
          <% end %>
        </div>
      </div>
      <div class="card-product con row">
        <i class="fa-solid fa-utensils col-2"></i>
        <div class="card-product-infos col-10">
          <h2>Supermarkets</h2>
          <% if @search.supermarkets_score > 0 %>
            <p>Great! There are grocery stores nearby.</p>
          <% elsif @search.restaurants_score == 0 %>
            <p>There are not many grocery stores.</p>
          <% else %>
            <p>No grocery stores around.</p>
          <% end %>
        </div>
      </div>
      <div class="card-product row">
        <i class="fa-solid fa-car col-2"></i>
