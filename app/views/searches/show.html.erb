<%= render "shared/navbar_black" %>
<div class="search">
  <div class="pro-cons-title">
    <h2><%= @search.location.address %></h2>
    <h4>1012 DE Amsterdam</h4>
  </div>
  <div class ="map_card_grid">
    <div class="map-show">
      <div style="width: 100%; height: 450px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>

