<div class="details-mask">
  <div class="details-modal">
    <div class="details-header">
      <div class="details-title">
        <h3>Schools nearby</h3>
        <h5><%= @search.location.address %></h5>
      </div>
      <i class="fa-solid fa-xmark"></i>
    </div>
    <div class="poi-list">
      <% @search.location.pois.each do |place| %>
        <% if place.category.include?("school") %>
          <div class="poi-card">
            <i class="fa-solid fa-pencil"></i>
              <div class="poi-info">
                <div class="poi-infomain">
                  <h5><%= place.name %></h5>
                  <p><%= place.address %></p>
                </div>
                <% categories = eval(place.category) %>
                <p><%= categories.first.capitalize %></p>
              </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
